---
// import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- <ViewTransitions/> -->
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Lato';
		src: url('../../public/fonts/Lato/Lato-Regular.ttf');
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'Lato';
		src: url('../../public/fonts/Lato/Lato-Bold.ttf');
		font-weight: bold;
		font-style: bold;
	}
	@font-face {
		font-family: 'Poppins';
		src: url('../../public/fonts/Poppins/Poppins-Regular.ttf');
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'Poppins';
		src: url('../../public/fonts/Poppins/Poppins-Bold.ttf');
		font-weight: bold;
		font-style: bold;
	}
	@font-face {
		font-family: 'Cinzel';
		src: url('../../public/fonts/Cinzel/Cinzel-Regular.ttf');
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'Cinzel';
		src: url('../../public/fonts/Cinzel/Cinzel-Bold.ttf');
		font-weight: bold;
		font-style: bold;
	}
	@font-face {
		font-family: 'Cinzel';
		src: url('../../public/fonts/Cinzel/Cinzel-Medium.ttf');
		font-weight: 500;
	}

	html{
		font-family: 'Lato';
        font-weight: normal;
		scroll-behavior: smooth;
	}
</style>
