---
import { Image } from "astro:assets";
import Smartphone from "../images/icons/smartphone.png";
import Image_1 from "../images/index_grid/1.png";
import Image_11 from "../images/index_grid/11.png";
import Image_2 from "../images/index_grid/2.png";
import Image_3 from "../images/index_grid/3.png";
import Image_4 from "../images/index_grid/4.png";
import Image_5 from "../images/index_grid/5.png";
import Image_7 from "../images/index_grid/7.png";
import Image_8 from "../images/index_grid/8.png";
import Image_9 from "../images/index_grid/9.png";
import White_logo from "../images/logos/la_villa_white.png";
---

<section class="mt-9">
    <div class="w-full sm:px-4 py-4 px-2 mx-auto sm:py-4 lg:px-6">
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <div class="col-span-2 md:col-span-2">
                <div class="mb-4 md:mb-4 xl:mb-6">
                    <Image src={Image_1} alt="La villa beach" class="h-full w-full" />
                </div>
                <div class="grid gap-x-4 grid-cols-2">
                    <Image src={Image_2} alt="La villa beach" class="h-full w-full" />
                    <Image src={Image_3} alt="La villa beach" class="h-full w-full" />
                </div>
            </div>
            <div class="col-span-2 md:col-span-1">
                <Image src={Image_4} alt="La villa beach" class="h-full w-full" />
            </div>
        </div>
    </div>

    <div class="w-full sm:px-4 py-4 px-2 mx-auto sm:py-4 lg:px-6">
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <div class="col-span-2 md:col-span-1">
                <Image src={Image_5} alt="La villa beach" class="h-full w-full" />
            </div>
            <div class="col-span-2 md:col-span-2">
                <div class="mb-4 md:mb-4 xl:mb-6 flex flex-col items-center p-8" id="la_villa_logo">
                    <Image src={White_logo} alt="La villa beach" class="h-1/3 w-1/3" />
                </div>
                <div class="grid gap-x-4 grid-cols-2">
                    <Image src={Image_7} alt="La villa beach" class="h-full w-full" />
                    <Image src={Image_8} alt="La villa beach" class="h-full w-full" />
                </div>
            </div>
        </div>
    </div>

    <div class="w-full sm:px-4 py-4 px-2 mx-auto sm:py-4 lg:px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="col-span-1">
                <Image src={Image_9} alt="La villa beach" class="h-full w-full" />
            </div>
            <div class="col-span-1 flex items-center" id="reservation">
                <div class="text-center p-8">
                    <h1 class="text-2xl"></h1>
                    <p class="mt-5 text-sm"></p>
                    <div class="flex justify-center items-center mt-3 mb-3">
                        <Image src={Smartphone} alt="La villa beach" />
                    </div>
                    <a href="https://wa.me/+5213141014478" target="_blank">+52 1 314 101 4478</a>
                </div>
            </div>
            <div class="col-span-1">
                <Image src={Image_11} alt="La villa beach" class="h-full w-full" />
            </div>
        </div>
    </div>    
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const lang = document.cookie.split('; ').find(row => row.startsWith('lang'))!.split('=')[1];

        const translations = {
            es: {
                reservation: 'RESERVACIÓN',
                body: 'Para obtener más información, reservas o consultas sobre eventos y bodas, no dudes en ponerte en contacto con nuestro equipo dedicado. Estamos aquí para hacer que tu experiencia sea extraordinaria.'
            },
            en: {
                reservation: 'RESERVATION',
                body: 'For more information, bookings or event and wedding inquiries, please do not hesitate to contact our dedicated team. We are here to make your experience extraordinary.'
            }
        };

        document.querySelector('#reservation h1')!.textContent = translations[lang as 'es' | 'en'].reservation;
        document.querySelector('#reservation .text-sm')!.textContent = translations[lang as 'es' | 'en'].body;
    });
</script>


<style>
    #la_villa_logo{
        background-color: #BAA76F;
    }
    #reservation{
        background-color: #123940;
        font-weight: normal;
        color: white;
        height: 100%;
    }
    #reservation h1{
        font-family: 'Cinzel';
        letter-spacing: 11px;
    }
    #reservation a{
        font-family: 'Cinzel';
    }
    #reservation img{
        width: 20px;
        height: 35px;
    }
</style>