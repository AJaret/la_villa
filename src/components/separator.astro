import { Image } from "astro:assets";
import BeachLogo from "../images/logos/la_villa_beach_logo.svg";
---

<section class="p-10 mt-20">
    <div class="container mx-auto sm:px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="flex items-center justify-center">
                <p class="text-left text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl">Located on the beautiful coast of Colima, La Villa in Cuyotl√°n offers you a unique beachfront experience.</p>
            </div>
