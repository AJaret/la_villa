---
import type { GetStaticPaths } from "astro";
import { Image } from "astro:assets";
const {room} = Astro.params;

import Footer from '../../components/footer.astro';
import SecondaryHeader from '../../components/secondary_header.astro';
import Layout from '../../layouts/Layout.astro';

import Bath from '../../images/icons/bath.svg';
import Bathroom from '../../images/icons/bathroom.svg';
import Beach from '../../images/icons/beach.svg';
import Bed from '../../images/icons/bed.svg';
import Car from '../../images/icons/car.svg';
import Dog from '../../images/icons/dog.svg';
import Guest from '../../images/icons/guest.svg';
import Pool from '../../images/icons/pool.svg';
import Tv from '../../images/icons/tv.svg';
import Wifi from '../../images/icons/wifi.svg';


let pageTitle = '';
let description = '';

switch (room) {
	case 'conchi':
		pageTitle = 'La Villa Suite Conchi';
		description = 'Nuestro pequeño hotel disfruta de la hermosa ubicación en la playa. Acceso para huéspedes. Los huéspedes tienen acceso a todas las áreas comunes, piscina, nuestro club de playa Lila Beach.<br><br>Los huéspedes también pueden reservar con antelación el almuerzo o la cena en nuestro restaurante por un costo adicional.';
	break;
	case 'vista':
		pageTitle = 'La Villa Vista del Mar Suite';
		description = 'Nuestra suite Vista del Mar es un refugio privado con una impresionante vista al mar. Disfruta de la ubicación frente a la playa de nuestra propiedad boutique en Cuyutlan, Colima, México. Relájate junto a la piscina o maravíllate con el fascinante océano y las puestas de sol durante todo el año desde nuestro club de playa “Lila Beach” adjunto al hotel. ¡El desayuno buffet de La Villa repondrá tu energía todas las mañanas! Pasa tus días reenergizándote junto a nuestra hermosa piscina o en la playa antes de permitirte explorar esta hermosa región de México.';
	break;
	case 'maya':
		pageTitle = 'La Villa Suite Maya';
		description = 'Nuestro pequeño hotel disfruta de la hermosa ubicación en la playa. Acceso para huéspedes. Los huéspedes tienen acceso a todas las áreas comunes, piscina, nuestro club de playa Lila Beach.<br><br>Los huéspedes también pueden reservar con antelación el almuerzo o la cena en nuestro restaurante por un costo adicional.';
	break;
	case 'penelope':
		pageTitle = 'La Villa Penelope';
		description = 'Nuestra suite Vista del Mar es un refugio privado con una impresionante vista al mar. Disfruta de la ubicación frente a la playa de nuestra propiedad boutique en Cuyutlan, Colima, México. Relájate junto a la piscina o maravíllate con el fascinante océano y las puestas de sol durante todo el año desde nuestro club de playa “Lila Beach” adjunto al hotel. ¡El desayuno buffet de La Villa repondrá tu energía todas las mañanas! Pasa tus días reenergizándote junto a nuestra hermosa piscina o en la playa antes de permitirte explorar esta hermosa región de México.';
	break;
	case 'jose':
		pageTitle = 'La Villa Habitación José';
		description = 'Disfruta de la ubicación única frente a la playa de nuestro hotel boutique en Cuyutlan, Colima. Relájate junto a la piscina, maravilla el fascinante océano y las puestas de sol durante todo el año desde nuestro Beach Club “Lila Beach” adjunto a la propiedad. El desayuno buffet de La Villa te dejará con energía todas las mañanas.';
	break;

	default:
		pageTitle = room;
	break;
}

export const getStaticPaths = (() => {
	return [
		{params: {room: 'conchi'}},
		{params: {room: 'vista'}},
		{params: {room: 'maya'}},
		{params: {room: 'penelope'}},
		{params: {room: 'jose'}},
	];
}) satisfies GetStaticPaths;
---


<Layout title={pageTitle}>
	<main>
        <SecondaryHeader BackgroundUrl=`/src/images/rooms/headers/${room}-header.png` />
		<div class="container mt-10 mb-8">
			<h1 class="text-3xl">{pageTitle}</h1>
		</div>
		<div class="w-full px-4 py-4 mx-auto">
			<div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-4">
				<div class="col-span-2 md:col-span-2">
					<div class="mb-4 md:mb-4 xl:mb-6 grid gap-x-4 grid-cols-2">
						<img src=`/src/images/rooms/room_grid/${room}/1.png` alt="Grid image 1" class="h-full w-full">
						<img src=`/src/images/rooms/room_grid/${room}/2.png` alt="Grid image 2" class="h-full w-full">
					</div>
					<div class="grid gap-x-4 grid-cols-2">
						<img src=`/src/images/rooms/room_grid/${room}/3.png` alt="Grid image 3" class="h-full w-full">
						<img src=`/src/images/rooms/room_grid/${room}/4.png` alt="Grid image 4" class="h-full w-full">
					</div>
				</div>
				<div class="col-span-2 md:col-span-1">
					<img src=`/src/images/rooms/room_grid/${room}/5.png` alt="Grid image 4" class="h-full w-full">
				</div>
			</div>
		</div>
		<div class="container mt-10 mb-10">
			<h1 class="text-3xl">Lo que ofrece este lugar</h1>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-28 mt-10">
				<ul class="w-full text-base">
					<li class="flex items-center">
						<Image src={Beach} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Acceso a la playa: frente a la playa</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Wifi} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Wifi</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Car} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Estacionamiento gratuito en las instalaciones</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Pool} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Alberca: Uso compartido, al aire libre, disponible todo el año, las 24 horas</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Bath} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Jacuzzi privado: disponible todo el año, disponible las 24 horas</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Dog} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Se admiten mascotas</p>
					  </div>
					</li>
					<li class="flex items-center">
						<Image src={Tv} alt="Beach icon" class="mr-8 py-2 w-9 h-9" />
					  <div class="flex-1">
						<p class="mt-1">Televisión HD y Chromecast, Roku, Netflix</p>
					  </div>
					</li>
				</ul>

				<div class="font-bold text-base">
					<div class="grid grid-cols-1 md:grid-cols-3 gap-1">
						<div class="flex items-center justify-between md:border-r-2 md:border-gray-400 w-full md:w-3/4">
							<p>1 Cama</p>
							<Image src={Bed} alt="Beach icon" class="mr-8 py-2 w-12 h-12" />
						</div>
						<div class="flex items-center justify-between md:border-r-2 md:border-gray-400 w-full md:w-3/4">
							<p>2 Guest</p>
							<Image src={Guest} alt="Beach icon" class="mr-8 py-2 w-12 h-12" />
						</div>
						<div class="flex items-center justify-between w-full md:w-3/4">
							<p>2 Cuartos de baño</p>
							<Image src={Bathroom} alt="Beach icon" class="mr-8 py-2 w-12 h-12" />
						</div>
					</div>
					<hr class="border-1 border-gray-400 mt-5">
					<p class="mt-8" id="description">
						{description}
					</p>
				</div>
			</div>
		</div>
		<Footer SeparatorColor="#FFF6DD" />
	</main>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', (event) => {
		const path = window.location.pathname;
		const lang = document.cookie.split('; ').find(row => row.startsWith('lang'))!.split('=')[1];

		const translations = {
			es: {
				"conchi": "Nuestro pequeño hotel disfruta de la hermosa ubicación en la playa. Acceso para huéspedes. Los huéspedes tienen acceso a todas las áreas comunes, piscina, nuestro club de playa Lila Beach.<br><br>Los huéspedes también pueden reservar con antelación el almuerzo o la cena en nuestro restaurante por un costo adicional.",
				"vista": "Nuestra suite Vista del Mar es un refugio privado con una impresionante vista al mar. Disfruta de la ubicación frente a la playa de nuestra propiedad boutique en Cuyutlan, Colima, México. Relájate junto a la piscina o maravíllate con el fascinante océano y las puestas de sol durante todo el año desde nuestro club de playa “Lila Beach” adjunto al hotel. ¡El desayuno buffet de La Villa repondrá tu energía todas las mañanas! Pasa tus días reenergizándote junto a nuestra hermosa piscina o en la playa antes de permitirte explorar esta hermosa región de México.",
				"maya": "Nuestro pequeño hotel disfruta de la hermosa ubicación en la playa. Acceso para huéspedes. Los huéspedes tienen acceso a todas las áreas comunes, piscina, nuestro club de playa Lila Beach.<br><br>Los huéspedes también pueden reservar con antelación el almuerzo o la cena en nuestro restaurante por un costo adicional.",
				"penelope": "Inspirada en los sueños de tranquilidad y romance, la Habitación Penélope es un refugio íntimo perfecto para parejas. Con detalles elegantes y una atmósfera acogedora, es el lugar ideal para desconectar y reencontrarse. Los huéspedes también pueden reservar con antelación el almuerzo o la cena en nuestro restaurante por un costo adicional.",
				"jose": "Disfruta de la ubicación única frente a la playa de nuestro hotel boutique en Cuyutlan, Colima. Relájate junto a la piscina, maravilla el fascinante océano y las puestas de sol durante todo el año desde nuestro Beach Club “Lila Beach” adjunto a la propiedad. El desayuno buffet de La Villa te dejará con energía todas las mañanas."
			},
			en: {
				conchi: {
					description: "Our small hotel enjoys the beautiful beachfront location. Guest access. Guests have access to all common areas, pool, our beach club Lila Beach.<br><br>Guests can also book lunch or dinner in advance at our restaurant for an additional cost."
				},
				vista: {
					description: "Our Vista del Mar suite is a private retreat with a stunning sea view. Enjoy the beachfront location of our boutique property in Cuyutlan, Colima, Mexico. Relax by the pool or marvel at the fascinating ocean and sunsets all year round from our beach club 'Lila Beach' attached to the hotel. La Villa's buffet breakfast will replenish your energy every morning! Spend your days recharging by our beautiful pool or on the beach before allowing yourself to explore this beautiful region of Mexico."
				},
				maya: {
					description: "Our small hotel enjoys the beautiful beachfront location. Guest access. Guests have access to all common areas, pool, our beach club Lila Beach.<br><br>Guests can also book lunch or dinner in advance at our restaurant for an additional cost."
				},
				penelope: {
					description: "Inspired by dreams of tranquility and romance, the Penelope Room is an intimate retreat perfect for couples. With elegant details and a cozy atmosphere, it is the ideal place to disconnect and reconnect. Guests can also book lunch or dinner in advance at our restaurant for an additional cost."
				},
				jose: {
					description: "Enjoy the unique beachfront location of our boutique hotel in Cuyutlan, Colima. Relax by the pool, marvel at the fascinating ocean and sunsets all year round from our Beach Club 'Lila Beach' attached to the property. La Villa's buffet breakfast will energize you every morning."
				}
			}
		};

		document.querySelector('#description')!.innerHTML = translations[lang as 'es' | 'en'].path.description;
		document.querySelector('#vista p')!.innerHTML = translations[lang as 'es' | 'en'].vista;
		document.querySelector('#maya p')!.innerHTML = translations[lang as 'es' | 'en'].maya;
		document.querySelector('#penelope p')!.innerHTML = translations[lang as 'es' | 'en'].penelope;
		document.querySelector('#jose p')!.innerHTML = translations[lang as 'es' | 'en'].jose;
	});
</script>

<style>
	h1{
		font-family: 'Cinzel';
		font-weight: bold;
	}
	.container {
		margin-right: auto;
		margin-left: auto;
		max-width: 1140px;
		padding-right: 15px;
		padding-left: 15px;
	}

	ul, p{
		color: #666666;
		font-weight: normal;
	}

	@media (min-width: 576px) {
		.container {
			max-width: 540px;
		}
	}

	@media (min-width: 768px) {
		.container {
			max-width: 720px;
		}
	}

	@media (min-width: 992px) {
		.container {
			max-width: 960px;
		}
	}

	@media (min-width: 1200px) {
		.container {
			max-width: 1340px;
		}
	}

</style>